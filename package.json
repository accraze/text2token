{
    "name": "text2token",
    "description": "break down corpus of text into words/tokens",
    "main": "src/index.js",
    "scripts": {
        "test": "mocha src/index.test.js -w ",
        "test:single": "istanbul cover -x *.test.js _mocha src/index.test.js",
        "commit": "git-cz",
        "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
        "report-coverage": "cat ./coverage/lcov.info | codecov",
        "semantic-release": "semantic-release pre && npm publish && semantic-release post"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/accraze/text2token.git"
    },
    "keywords": [
        "text",
        "strings",
        "tokens",
        "nlp"
    ],
    "author": "accraze",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/accraze/text2token/issues"
    },
    "homepage": "https://github.com/accraze/text2token",
    "devDependencies": {
        "chai": "3.3.0",
        "commitizen": "1.0.4",
        "cz-conventional-changelog": "1.1.0",
        "mocha": "2.3.3",
        "codecov.io": "0.1.6",
        "istanbul": "0.3.20",
        "ghooks": "0.3.2",
        "semantic-release": "^4.3.5",
        "n-readlines": "0.2.7"
    },
    "czConfig": {
        "path": "node_modules/cz-conventional-changelog"
    },
    "config": {
        "ghooks": {
            "pre-commit": "npm run test:single && npm run check-coverage"
        }
    }
}
